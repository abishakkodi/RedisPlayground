<div class="search">
  {{#if error}}
    <div class="error bg-info">
      <span>{{error}}</span>
    </div>
  {{/if}}
  <h1> Search Users</h1>
  <form class="form-inline" method="POST" action="/user/search">
    <div class="form-group">
      <input type="text" name='id' class="form-control" placeholder="Search for Users by ID">
    </div>
    <input type="submit" class="btn btn-primary" value="Search">
  </form>
</div>